<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="Back Button"/>

        <TextView
            android:id="@+id/guide_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/back_btn"
            app:layout_constraintBottom_toBottomOf="@id/back_btn"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <TextView
                android:id="@+id/guide_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온라인으로 제출서류 발급받는 방법"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                app:layout_constraintTop_toBottomOf="@id/bar1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/bar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                app:layout_constraintTop_toBottomOf="@id/guide_title"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/guide_detail_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정부 24를 통해 제출서류를 온라인으로 간편하게 받아보세요!"
                android:textSize="12dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintTop_toBottomOf="@id/bar2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>
            
            <ImageView
                android:id="@+id/guide_img_1"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:background="@drawable/guide_img_1"
                app:layout_constraintTop_toBottomOf="@id/guide_detail_1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/guide_detail_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인터넷 창에서 정부24를 검색하고 들어가서 로그인을 해주세요!"
                android:textSize="12dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintTop_toBottomOf="@id/guide_img_1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/guide_img_2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@drawable/guide_img_2"
                app:layout_constraintTop_toBottomOf="@id/guide_detail_2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/guide_detail_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 후 주민등록등본을 검색하면 민원서비스 목록이 나옵니다"
                android:textSize="12dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintTop_toBottomOf="@id/guide_img_2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/guide_img_3"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:background="@drawable/guide_img_3"
                app:layout_constraintTop_toBottomOf="@id/guide_detail_3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/guide_detail_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발급하기를 누른 후 필요한 내용을 적어주시고"
                android:textSize="12dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintTop_toBottomOf="@id/guide_img_3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/guide_detail_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신청자 본인의 주민번호 뒷자리는 모두 보이도록 발급해 주셔야 합니다."
                android:textSize="12dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintTop_toBottomOf="@id/guide_detail_4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>