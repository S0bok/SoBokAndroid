<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PolicyDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="Back Button"/>

        <TextView
            android:id="@+id/policy_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/back_btn"
            app:layout_constraintBottom_toBottomOf="@id/back_btn"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <TextView
                android:id="@+id/date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신청기간"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintTop_toBottomOf="@id/bar1"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상시신청"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toEndOf="@id/date_title"
                app:layout_constraintTop_toTopOf="@id/date_title"
                app:layout_constraintBottom_toBottomOf="@id/date_title"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/agency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="접수기관"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="@id/date_title"
                app:layout_constraintTop_toBottomOf="@id/date_title"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/agency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대구시청"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toEndOf="@id/agency_title"
                app:layout_constraintTop_toTopOf="@id/agency_title"
                app:layout_constraintBottom_toBottomOf="@id/agency_title"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/call_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화문의"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="@id/agency_title"
                app:layout_constraintTop_toBottomOf="@id/agency_title"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/call_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공공사업실/053-000-0000"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toEndOf="@id/call_title"
                app:layout_constraintTop_toTopOf="@id/call_title"
                app:layout_constraintBottom_toBottomOf="@id/call_title"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/department_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주관부서"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="@id/call_title"
                app:layout_constraintTop_toBottomOf="@id/call_title"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/department_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대구시 보건소"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toEndOf="@id/department_title"
                app:layout_constraintTop_toTopOf="@id/department_title"
                app:layout_constraintBottom_toBottomOf="@id/department_title"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지원유형"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="@id/department_title"
                app:layout_constraintTop_toBottomOf="@id/department_title"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현금"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toEndOf="@id/category_title"
                app:layout_constraintTop_toTopOf="@id/category_title"
                app:layout_constraintBottom_toBottomOf="@id/category_title"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/bar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                app:layout_constraintTop_toBottomOf="@id/category_title"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지원내용"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="@id/category_title"
                app:layout_constraintTop_toBottomOf="@id/bar2"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현금"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/department_title"
                app:layout_constraintTop_toBottomOf="@id/detail_title"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/method_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신청방법"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="@id/category_title"
                app:layout_constraintTop_toBottomOf="@id/detail_text"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/methodl_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방문신청(대구시청)"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/method_title"
                app:layout_constraintTop_toBottomOf="@id/method_title"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/target_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지원대상"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="@id/method_title"
                app:layout_constraintTop_toBottomOf="@id/methodl_text"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/target_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국민기초생활수급자"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/target_title"
                app:layout_constraintTop_toBottomOf="@id/target_title"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/standard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선정기준"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="@id/target_title"
                app:layout_constraintTop_toBottomOf="@id/target_text"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/standard_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소득 : 기준중위소득 75%"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/standard_title"
                app:layout_constraintTop_toBottomOf="@id/standard_title"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/standard_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재산 : 대도시 241백만원 이하"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/standard_title"
                app:layout_constraintTop_toBottomOf="@id/standard_text_1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/standard_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금융재산 : 600만원 이하"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/standard_title"
                app:layout_constraintTop_toBottomOf="@id/standard_text_2"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/document_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제출서류"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="@id/standard_title"
                app:layout_constraintTop_toBottomOf="@id/standard_text_3"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/document_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족관계기록사항에 관한 증명서"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/document_title"
                app:layout_constraintTop_toBottomOf="@id/document_title"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/document_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임대차계약서(사용대차 확인서)"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/document_title"
                app:layout_constraintTop_toBottomOf="@id/document_text_1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/document_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소득, 재산 확인서류"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/document_title"
                app:layout_constraintTop_toBottomOf="@id/document_text_2"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/document_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위임장 및 신분확인서류"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@id/document_title"
                app:layout_constraintTop_toBottomOf="@id/document_text_3"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"/>

            <ImageView
                android:id="@+id/bar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                app:layout_constraintTop_toBottomOf="@id/document_text_4"
                android:layout_marginTop="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
